<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_gravity="bottom|end"
            android:layout_width="match_parent"
            android:layout_height="192dp"/>

    <RelativeLayout android:background="@color/view_group_accuracy_background"
                    android:paddingStart="@dimen/content_horizontal_margin"
                    android:paddingEnd="@dimen/content_horizontal_margin"
                    android:paddingTop="@dimen/content_vertical_margin"
                    android:paddingBottom="@dimen/content_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <TextView android:id="@+id/text_view_accuracy"
                  android:text="@string/text_view_accuracy"
                  android:textColor="@color/view_group_accuracy_text_color"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_accuracy_value"
                  android:text="@string/value_not_available"
                  android:textColor="@color/view_group_accuracy_text_color"
                  android:layout_marginStart="@dimen/content_horizontal_margin"
                  android:layout_toEndOf="@id/text_view_accuracy"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>
