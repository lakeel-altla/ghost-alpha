<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoTitleBar" parent="AppTheme.Base" />

    <style name="AppTheme.TitleBar" parent="AppTheme.Base" />

    <style name="ToolbarTheme.Transparent" parent="@style/ThemeOverlay.AppCompat.Light" />

    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:importantForAutofill" tools:ignore="NewApi">noExcludeDescendants</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
