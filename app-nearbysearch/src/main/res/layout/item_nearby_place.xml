<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_marginStart="@dimen/cardview_horitonzal_margin"
        android:layout_marginEnd="@dimen/cardview_horitonzal_margin"
        android:layout_marginTop="@dimen/cardview_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        app:cardCornerRadius="4dp">

    <ImageView android:id="@+id/image_view_photo"
               android:adjustViewBounds="true"
               android:scaleType="centerCrop"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>

    <LinearLayout android:layout_gravity="bottom"
                  android:background="#88000000"
                  android:orientation="horizontal"
                  android:paddingTop="@dimen/content_vertical_margin"
                  android:paddingBottom="@dimen/content_vertical_margin"
                  android:paddingStart="@dimen/content_horizontal_margin"
                  android:paddingEnd="@dimen/content_horizontal_margin"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <ImageView android:id="@+id/image_view_icon"
                   android:layout_gravity="center"
                   android:layout_width="@dimen/touch_target_width"
                   android:layout_height="@dimen/touch_target_height"/>

        <LinearLayout android:orientation="vertical"
                      android:layout_marginStart="@dimen/content_horizontal_margin"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <TextView android:id="@+id/text_view_name"
                      android:textColor="#FFFFFFFF"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <TextView android:id="@+id/text_view_initial_bearing"
                          android:textColor="#FFFFFFFF"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

                <TextView android:id="@+id/text_view_distance"
                          android:textColor="#FFFFFFFF"
                          android:layout_marginStart="@dimen/content_horizontal_margin"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
