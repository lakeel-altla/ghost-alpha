<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.lakeel.altla.ghost.alpha.virtualobject.view.fragment.MyObjectEditFragment">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <TextView android:id="@+id/text_view_label_uri"
                  android:text="@string/text_view_label_uri"
                  android:layout_marginStart="@dimen/content_horizontal_margin"
                  android:layout_marginEnd="@dimen/content_horizontal_margin"
                  android:layout_marginTop="@dimen/content_vertical_margin"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
        <TextView android:id="@+id/text_view_uri"
                  android:layout_below="@id/text_view_label_uri"
                  android:layout_marginStart="@dimen/content_horizontal_margin"
                  android:layout_marginEnd="@dimen/content_horizontal_margin"
                  android:layout_marginTop="@dimen/content_vertical_margin"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
        <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_marginStart="@dimen/content_horizontal_margin"
                android:layout_marginEnd="@dimen/content_horizontal_margin"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:layout_marginBottom="@dimen/content_vertical_margin"
                android:layout_below="@id/text_view_uri"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                app:cardCornerRadius="4dp">
            <ImageView android:id="@+id/image_view_rich_link_image"
                       android:adjustViewBounds="true"
                       android:scaleType="centerCrop"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>
            <LinearLayout android:layout_gravity="bottom"
                          android:background="#88000000"
                          android:orientation="horizontal"
                          android:paddingTop="@dimen/content_vertical_margin"
                          android:paddingBottom="@dimen/content_vertical_margin"
                          android:paddingStart="@dimen/content_horizontal_margin"
                          android:paddingEnd="@dimen/content_horizontal_margin"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                <ImageView android:id="@+id/image_view_icon"
                           android:layout_gravity="center"
                           android:layout_width="@dimen/touch_target_width"
                           android:layout_height="@dimen/touch_target_height"/>
                <LinearLayout android:orientation="vertical"
                              android:layout_marginStart="@dimen/content_horizontal_margin"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content">
                    <TextView android:id="@+id/text_view_rich_link_title"
                              android:textColor="#FFFFFFFF"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View android:id="@+id/divider_uri"
              style="@style/HorizontalDivider"
              android:layout_below="@id/card_view"/>

        <TextView android:id="@+id/text_view_label_location"
                  android:text="@string/text_view_label_location"
                  android:layout_marginStart="@dimen/content_horizontal_margin"
                  android:layout_marginEnd="@dimen/content_horizontal_margin"
                  android:layout_marginTop="@dimen/content_vertical_margin"
                  android:layout_below="@id/divider_uri"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
        <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_marginStart="@dimen/content_horizontal_margin"
                android:layout_marginEnd="@dimen/content_horizontal_margin"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:layout_marginBottom="@dimen/content_vertical_margin"
                android:layout_below="@id/text_view_label_location"
                android:layout_width="match_parent"
                android:layout_height="192dp"/>

    </RelativeLayout>

</ScrollView>
