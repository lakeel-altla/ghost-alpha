<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.fragment.DebugSettingsFragment">

    <TextView android:id="@+id/text_view_google_map_visible"
              android:text="@string/text_view_google_map_visible"
              android:gravity="center_vertical"
              android:layout_marginStart="@dimen/content_horizontal_margin"
              android:minHeight="@dimen/item_min_height"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <Switch android:id="@+id/switch_google_map_visible"
            android:layout_toEndOf="@id/text_view_google_map_visible"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/text_view_google_map_visible"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:layout_marginEnd="@dimen/content_horizontal_margin"
            android:minHeight="@dimen/item_min_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <View android:id="@+id/divider_google_map_visible"
          android:background="@color/divider"
          android:layout_below="@id/text_view_google_map_visible"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

    <RelativeLayout android:id="@+id/view_group_search_radius"
                    android:layout_below="@id/divider_google_map_visible"
                    android:paddingTop="@dimen/content_vertical_margin"
                    android:layout_marginStart="@dimen/content_horizontal_margin"
                    android:layout_marginEnd="@dimen/content_horizontal_margin"
                    android:minHeight="@dimen/item_min_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <TextView android:id="@+id/text_view_search_radius"
                  android:text="@string/text_view_search_radius"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_search_radius_value"
                  android:text="@string/format_text_view_search_radius_value"
                  android:layout_toEndOf="@id/text_view_search_radius"
                  android:layout_marginStart="@dimen/content_horizontal_margin"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:id="@+id/seek_bar_search_radius"
                app:dsb_progressColor="@color/app_theme_accent"
                app:dsb_indicatorColor="@color/app_theme_accent"
                android:layout_below="@id/text_view_search_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
    <View android:id="@+id/divider_search_radius"
          android:background="@color/divider"
          android:layout_below="@id/view_group_search_radius"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

    <RelativeLayout android:id="@+id/view_group_location_updates_interval"
                    android:layout_below="@id/divider_search_radius"
                    android:paddingTop="@dimen/content_vertical_margin"
                    android:layout_marginStart="@dimen/content_horizontal_margin"
                    android:layout_marginEnd="@dimen/content_horizontal_margin"
                    android:minHeight="@dimen/item_min_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <TextView android:id="@+id/text_view_location_updates_interval"
                  android:text="@string/text_view_location_updates_interval"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_location_updates_interval_value"
                  android:text="@string/format_text_view_location_updates_interval_value"
                  android:layout_toEndOf="@id/text_view_location_updates_interval"
                  android:layout_marginStart="@dimen/content_horizontal_margin"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:id="@+id/seek_bar_location_updates_interval"
                app:dsb_progressColor="@color/app_theme_accent"
                app:dsb_indicatorColor="@color/app_theme_accent"
                android:layout_below="@id/text_view_location_updates_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
    <View android:id="@+id/divider_location_updates_interval"
          android:background="@color/divider"
          android:layout_below="@id/view_group_location_updates_interval"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

    <RelativeLayout android:id="@+id/view_group_location_updates_distance"
                    android:layout_below="@id/divider_location_updates_interval"
                    android:paddingTop="@dimen/content_vertical_margin"
                    android:layout_marginStart="@dimen/content_horizontal_margin"
                    android:layout_marginEnd="@dimen/content_horizontal_margin"
                    android:minHeight="@dimen/item_min_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <TextView android:id="@+id/text_view_location_updates_distance"
                  android:text="@string/text_view_location_updates_distance"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_location_updates_distance_value"
                  android:text="@string/format_text_view_location_updates_distance_value"
                  android:layout_toEndOf="@id/text_view_location_updates_distance"
                  android:layout_marginStart="@dimen/content_horizontal_margin"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:id="@+id/seek_bar_location_updates_distance"
                app:dsb_progressColor="@color/app_theme_accent"
                app:dsb_indicatorColor="@color/app_theme_accent"
                android:layout_below="@id/text_view_location_updates_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
    <View android:id="@+id/divider_location_updates_distance"
          android:background="@color/divider"
          android:layout_below="@id/view_group_location_updates_distance"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

    <TextView android:id="@+id/text_view_manual_location_updates_enabled"
              android:text="@string/text_view_manual_location_updates_enabled"
              android:layout_below="@id/divider_location_updates_distance"
              android:gravity="center_vertical"
              android:layout_marginStart="@dimen/content_horizontal_margin"
              android:minHeight="@dimen/item_min_height"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <Switch android:id="@+id/switch_manual_location_updates_enabled"
            android:layout_toEndOf="@id/text_view_manual_location_updates_enabled"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/text_view_manual_location_updates_enabled"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:layout_marginEnd="@dimen/content_horizontal_margin"
            android:minHeight="@dimen/item_min_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <View android:id="@+id/divider_manual_location_updates_enabled"
          android:background="@color/divider"
          android:layout_below="@id/text_view_manual_location_updates_enabled"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

    <Spinner android:id="@+id/spinner_location_request_priority"
             android:spinnerMode="dialog"
             android:entries="@array/spinner_location_request_priority"
             android:layout_alignParentEnd="true"
             android:gravity="center_vertical"
             android:layout_below="@id/divider_manual_location_updates_enabled"
             android:layout_marginStart="@dimen/content_horizontal_margin"
             android:layout_marginEnd="@dimen/content_horizontal_margin"
             android:minHeight="@dimen/item_min_height"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text_view_location_request_priority"
              android:text="@string/text_view_location_request_priority"
              android:layout_toStartOf="@id/spinner_location_request_priority"
              android:layout_alignTop="@id/spinner_location_request_priority"
              android:layout_alignBottom="@id/spinner_location_request_priority"
              android:gravity="center_vertical"
              android:layout_marginStart="@dimen/content_horizontal_margin"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <View android:id="@+id/divider_location_request_priority"
          android:background="@color/divider"
          android:layout_below="@id/text_view_location_request_priority"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

</RelativeLayout>
